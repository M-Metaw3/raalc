              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"registerToken\": \"{{registerToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/resend-otp",
              "host": ["{{baseUrl}}"],
              "path": ["users", "resend-otp"]
            },
            "description": "Resend OTP if expired or not received"
