            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"{{phone}}\",\n  \"password\": \"{{password}}\",\n  \"deviceId\": \"device-123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            },
            "description": "Login with phone number (UAE format: 05XXXXXXXX)"
          },
          "response": []
        },
        {
          "name": "3.3 Verify Login OTP (New Device)",
